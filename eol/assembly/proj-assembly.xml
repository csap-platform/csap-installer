<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>installer</outputDirectory>
      <directory>${basedir}/../registry/target</directory>
      <includes>
        <include>*.tar.gz</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>installer</outputDirectory>
      <directory>${basedir}/../registry_deploy/target</directory>
      <includes>
        <include>*.tar.gz</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>installer</outputDirectory>
      <directory>${basedir}/../scripts/target/scripts</directory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>installer</outputDirectory>
      <directory>${basedir}/../image_tar/target</directory>
      <fileMode>0644</fileMode>
      <includes>
        <include>${image-tar-filename}</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
